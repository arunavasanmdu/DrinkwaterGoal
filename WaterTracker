<body>
    <div class="container">
        <header>
            <h1>üíß 64oz Water Challenge</h1>
            <div class="subtitle">Daily Hydration Tracker</div>
            <div class="date-display" id="currentDate"></div>
        </header>
        
        <div class="winners-banner hidden" id="winnersBanner">
            <h2>üèÜ Today's Goal Champions! üèÜ</h2>
            <div class="winners-list" id="winnersList"></div>
        </div>
        
        <div class="controls">
            <h2>Add Water Intake</h2>
            <div class="input-group">
                <select id="participantSelect">
                    <option value="">Select Participant</option>
                </select>
                <button class="btn btn-add" onclick="addWater()">üíß Add 8oz</button>
                <button class="btn btn-reset" onclick="resetToday()">üîÑ Reset Today</button>
            </div>
        </div>
        
        <div class="stats-overview">
            <div class="stat-card">
                <div class="stat-value" id="totalParticipants">12</div>
                <div class="stat-label">Total Participants</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="goalReached">0</div>
                <div class="stat-label">Goals Reached Today</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="totalWater">0oz</div>
                <div class="stat-label">Total Water Today</div>
            </div>
            <div class="stat-card">
                <div class="stat-value" id="avgIntake">0oz</div>
                <div class="stat-label">Average Intake</div>
            </div>
        </div>
        
        <div class="participants-grid" id="participantsGrid"></div>
        
        <div class="leaderboard">
            <h2>üèÜ Today's Leaderboard</h2>
            <div id="leaderboardList"></div>
        </div>
    </div>
    
    <script>
        const GOAL = 64;
        const INCREMENT = 8;
        
        const defaultParticipants = [
            'Alex', 'Jordan', 'Taylor', 'Morgan', 'Casey',
            'Riley', 'Avery', 'Quinn', 'Sage', 'River',
            'Dakota', 'Skyler'
        ];
        
        let participants = [];
        
        function initializeData() {
            const today = new Date().toDateString();
            const storedData = localStorage.getItem('waterChallenge');
            
            if (storedData) {
                const data = JSON.parse(storedData);
                if (data.date === today) {
                    participants = data.participants;
                } else {
                    // New day, reset intakes but keep names
                    participants = data.participants.map(p => ({
                        ...p,
                        intake: 0
                    }));
                    saveData();
                }
            } else {
                // First time, initialize with default participants
                participants = defaultParticipants.map(name => ({
                    name: name,
                    intake: 0
                }));
                saveData();
            }
        }
        
        function saveData() {
            const today = new Date().toDateString();
            localStorage.setItem('waterChallenge', JSON.stringify({
                date: today,
                participants: participants
            }));
        }
        
        function updateDisplay() {
            const select = document.getElementById('participantSelect');
            select.innerHTML = '<option value="">Select Participant</option>';
            participants.forEach((p, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = p.name;
                select.appendChild(option);
            });
            
            updateStats();
            renderParticipants();
            renderWinners();
            renderLeaderboard();
        }
        
        function renderWinners() {
            const winners = participants.filter(p => p.intake >= GOAL);
            const banner = document.getElementById('winnersBanner');
            const list = document.getElementById('winnersList');
            
            if (winners.length > 0) {
                banner.classList.remove('hidden');
                list.innerHTML = '';
                
                winners.forEach((winner, index) => {
                    const tag = document.createElement('div');
                    tag.className = 'winner-tag';
                    tag.style.animationDelay = `${index * 0.1}s`;
                    tag.innerHTML = `
                        <span class="trophy">üèÜ</span>
                        <span>${winner.name}</span>
                    `;
                    list.appendChild(tag);
                });
            } else {
                banner.classList.add('hidden');
            }
        }
        
        function updateStats() {
            const goalReached = participants.filter(p => p.intake >= GOAL).length;
            const totalWater = participants.reduce((sum, p) => sum + p.intake, 0);
            const avgIntake = Math.round(totalWater / participants.length);
            
            document.getElementById('totalParticipants').textContent = participants.length;
            document.getElementById('goalReached').textContent = goalReached;
            document.getElementById('totalWater').textContent = totalWater + 'oz';
            document.getElementById('avgIntake').textContent = avgIntake + 'oz';
        }
        
        function renderParticipants() {
            const grid = document.getElementById('participantsGrid');
            grid.innerHTML = '';
            
            participants.forEach((participant, index) => {
                const progress = Math.min((participant.intake / GOAL) * 100, 100);
                const isGoalReached = participant.intake >= GOAL;
                const isHalfwayReached = participant.intake >= 32 && participant.intake < GOAL;
                
                const card = document.createElement('div');
                card.className = `participant-card ${isGoalReached ? 'goal-reached' : ''}`;
                card.innerHTML = `
                    <div class="participant-header">
                        <div class="participant-name">${participant.name}</div>
                        <div class="participant-intake">${participant.intake}oz / ${GOAL}oz</div>
                    </div>
                    ${isGoalReached ? '<div class="goal-badge">‚ú® Goal Reached!</div>' : ''}
                    ${isHalfwayReached ? '<div class="halfway-badge">‚≠ê Halfway There!</div>' : ''}
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: ${progress}%"></div>
                    </div>
                    <div class="participant-actions">
                        <button class="action-btn" onclick="addWaterTo(${index}, 8)">+8oz</button>
                        <button class="action-btn" onclick="addWaterTo(${index}, 16)">+16oz</button>
                        <button class="action-btn" onclick="resetParticipant(${index})">Reset</button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }
        
        function renderLeaderboard() {
            const sorted = [...participants].sort((a, b) => b.intake - a.intake);
            const list = document.getElementById('leaderboardList');
            list.innerHTML = '';
            
            sorted.forEach((participant, index) => {
                const rank = index + 1;
                const item = document.createElement('div');
                item.className = `leaderboard-item ${rank === 1 ? 'top-1' : rank === 2 ? 'top-2' : rank === 3 ? 'top-3' : ''}`;
                item.innerHTML = `
                    <div class="rank ${rank === 1 ? 'top-1' : rank === 2 ? 'top-2' : rank === 3 ? 'top-3' : ''}">#${rank}</div>
                    <div class="leaderboard-name">${participant.name}</div>
                    <div class="leaderboard-intake">${participant.intake}oz</div>
                `;
                list.appendChild(item);
            });
        }
        
        function addWater() {
            const select = document.getElementById('participantSelect');
            const index = select.value;
            
            if (index === '') {
                alert('Please select a participant');
                return;
            }
            
            addWaterTo(parseInt(index), INCREMENT);
        }
        
        function addWaterTo(index, amount) {
            participants[index].intake += amount;
            saveData();
            updateDisplay();
        }
        
        function resetParticipant(index) {
            if (confirm(`Reset ${participants[index].name}'s water intake for today?`)) {
                participants[index].intake = 0;
                saveData();
                updateDisplay();
            }
        }
        
        function resetToday() {
            if (confirm('Reset all participants for today? This cannot be undone.')) {
                participants = participants.map(p => ({
                    ...p,
                    intake: 0
                }));
                saveData();
                updateDisplay();
            }
        }
        
        function updateDate() {
            const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
            const today = new Date().toLocaleDateString('en-US', options);
            document.getElementById('currentDate').textContent = today;
        }
        
        // Initialize
        updateDate();
        initializeData();
        updateDisplay();
    </script>
</body>
</html>
